#!/usr/bin/make -f

# wxWidgets version
export V=`dpkg -s libwxgtk2.8-dev | grep ^Version |cut -f2 -d' '`
VMAJOR:=$(shell echo $(V) |cut -f 1 -d .)
VMINOR:=$(shell echo $(V) |cut -f 2 -d .)
VPATCH:=$(shell echo $(V) |cut -f 3 -d .)
NEXTPATCH:=$(shell expr $(VPATCH) + 1 2>/dev/null || expr `echo $(VPATCH) | cut -f 1 -d - ` + 1)

%:
	dh $@

override_dh_gencontrol:
	dh_gencontrol -- -V'samewx:Depends=libwxgtk2.8-dev (>= $(VMAJOR).$(VMINOR).$(VPATCH)), libwxgtk2.8-dev (<< $(VMAJOR).$(VMINOR).$(NEXTPATCH)~), libwxgtk-media2.8-dev (>= $(VMAJOR).$(VMINOR).$(VPATCH)), libwxgtk-media2.8-dev (<< $(VMAJOR).$(VMINOR).$(NEXTPATCH)~)'
